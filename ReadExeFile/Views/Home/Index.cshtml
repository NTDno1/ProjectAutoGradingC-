        background-color: #f2f2f2;
        padding: 10px;
        text-align: center;
    }

    .logo {
        color: #333;
        font-size: 24px;
        text-decoration: none;
    }

    .navigation a {
        margin-right: 10px;
        color: #333;
        text-decoration: none;
    }

    /* CSS cho form */
    .form-group {
        margin-bottom: 10px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

