@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DataAccess.Models
@{
    var studentTotalMarks = ViewBag.StudentTotalMarks as Dictionary<string, double>;
}
@{
    var listUsers = ViewBag.listUsers as List<User>;
    var checkClass = ViewBag.data as String;
    var checkTestCase = ViewBag.checkclass as String;
    var checkFoder = ViewBag.checkFoder as String;
    var checkSuccess = ViewBag.addSuccess as String;
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Trang chủ</title>
</head>
<body>
    <div class="header">
        <a href="#" class="logo">Logo</a>
        <div class="navigation">
            <a asp-action="TakeMark">Chấm Điểm</a>
            <a asp-action="EditTestCase">Sửa TesCase</a> 
            <a asp-action="GetMark" >Xem Điểm</a>
            <a asp-action="logOut">Đăng xuất</a>
        </div>
    </div>

    <div class="content">
        <form asp-action="GetUser" method="post">
            <div class="form-group">
                <label for="username">Foder</label>
                <input required name="Foder" type="text" id="username" placeholder="Foder">
            </div>
            <div class="form-group">
                <label for="password">TestCase</label>
                <input required name="TestCase" type="text" id="password" placeholder="TestCase">
            </div>
            <div class="button-container">
                <button class="submit-button" type="submit">Submit</button>
            </div>
        </form>
    </div>
    @if (checkClass != null)
    {
        <span>@checkClass</span>
    }
    @if(checkTestCase != null)
    {
    <span>@checkTestCase</span>
    }
    @if(checkFoder != null)
    {
        <span>@checkFoder</span>
    }
    @if (checkSuccess!= null )
    {
        <span>@checkSuccess</span>
    }
    @if (checkClass == null)
    {
        @if (ViewBag.list != null)
        {
            string a = "";
            string b = "";
            <form id="myForm" asp-action="AddToDataBase" method="post">
                <table>
                    <tr>
                        <th>StudentName</th>
                        <th>QuestionNo</th>
                        <th>InputTestCase</th>
                        <th>OutputTestCase</th>
                        <th>Mark</th>
                        <th>OutPut</th>
                        <th>TotalMark</th>
                    </tr>
                    @foreach (Solution item in ViewBag.list)
                    {
                        <tr>
                            <td>
                                @if (a != item.StuName)
                                {
                                    <span class="student-name">@item.StuName</span>
                                }
                            </td>
                            <td>
                                @if (b != item.Question)
                                {
                                    <span class="question-no">@item.Question</span>
                                }
                            </td>
                            <td><span class="input-test-case">@item.InputTestCase</span></td>
                            <td><span class="output-test-case">@item.OutputTestCase</span></td>
                            <td><span class="mark">@item.Mark</span></td>
                            <td><span class="output-test-case">@item.OutPut</span></td>
                            @if (a != item.StuName)
                            {
                                @foreach (var mark in studentTotalMarks)
                                {
                                    if (mark.Key == item.StuName)
                                    {
                                        <td><span class="total-mark">@mark.Value</span></td>
                                        break;
                                    }
                                }
                            }
                        </tr>
                        a = item.StuName;
                        b = item.Question;
                    }
                    @foreach (var student in listUsers)
                    {
                        <tr>
                            <td>
                                <input type="hidden" name="UserName" value="aa" />
                                <span style="color: black;">@student.UserName: không nộp bài Hoặc File Không đúng định dạng</span>
                            </td>
                            <td>
                                <input type="hidden" name="questionNos" value="" />
                            </td>
                            <td><span style="color: red;"></span></td>
                            <td><span style="color: green;"></span></td>
                            <td><span style="color: red;"></span></td>
                            <td><span style="color: blue;"></span></td>
                        </tr>
                    }

                </table>

                <div class="button-container">

                    <button class="submit-button" type="submit">AddToDataBase</button>

                </div>

            </form>
        }
    }
<input required name="Foder" type="text" id="username" placeholder="Foder">
<h1>Thêm mới</h1>
<h1> thêm mới lần 2</h1>
</body>
</html>
<script>
    // JS cho nút Submit
    var submitButton = document.querySelector('.submit-button');
    submitButton.addEventListener('mouseover', function () {
        this.style.backgroundColor = '#555';
        this.style.color = '#fff';
    });
    submitButton.addEventListener('mouseout', function () {
        this.style.backgroundColor = '#4CAF50';
        this.style.color = '#fff';
    });
</script>

